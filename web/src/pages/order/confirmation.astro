---
import Layout from '../../layouts/Layout.astro';

// Get order_id from URL query parameter
const { order_id } = Astro.url.searchParams;
---

<Layout title="Order Confirmation">
  <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-8 text-center">
        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <!-- Success Message -->
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Order Confirmed!</h1>
        <p class="text-lg text-gray-600 mb-8">
          Thank you for your purchase. Your order has been successfully placed and is being processed.
        </p>

        <!-- Order Details -->
        {order_id && (
          <div class="bg-gray-50 rounded-lg p-6 mb-8 text-left">
            <h2 class="text-lg font-semibold text-gray-900 mb-3">Order Details</h2>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-gray-600">Order ID:</span>
                <span class="font-mono text-sm">{order_id}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Status:</span>
                <span class="text-green-600 font-medium">Paid</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Payment Method:</span>
                <span>Razorpay</span>
              </div>
            </div>
          </div>
        )}

        <!-- Next Steps -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">What happens next?</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-left">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 text-sm font-medium">1</span>
              </div>
              <div>
                <h4 class="font-medium text-gray-900">Order Processing</h4>
                <p class="text-sm text-gray-600">We'll prepare your items for shipping</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 text-sm font-medium">2</span>
              </div>
              <div>
                <h4 class="font-medium text-gray-900">Shipping</h4>
                <p class="text-sm text-gray-600">Your order will be shipped to your address</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-blue-600 text-sm font-medium">3</span>
              </div>
              <div>
                <h4 class="font-medium text-gray-900">Delivery</h4>
                <p class="text-sm text-gray-600">Receive your beautiful handmade products</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/account/dashboard" 
            class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors"
          >
            View My Orders
          </a>
          <a 
            href="/" 
            class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
          >
            Continue Shopping
          </a>
        </div>

        <!-- Contact Info -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-600">
            Questions about your order? 
            <a href="/contact" class="text-indigo-600 hover:text-indigo-700 font-medium">Contact Us</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // You can add any client-side JavaScript here if needed
  // For example, tracking codes or analytics
</script>

---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  return [
    { params: { id: 'sample-product-1' } },
    { params: { id: 'sample-product-2' } },
    { params: { id: 'sample-product-3' } }
  ];
}

const { id } = Astro.params;
---

<Layout title={`Product - ${id}`}>
  <Header />
  <main class="min-h-screen bg-cream flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-4xl font-playfair font-bold text-dark mb-4">Product: {id}</h1>
      <p class="text-lg text-dark/70 mb-8">Product details would be displayed here.</p>
      <a href="/products" class="bg-maroon text-cream px-6 py-3 rounded-md hover:bg-maroon/90 transition-colors">
        Browse Products
      </a>
    </div>
  </main>
  <Footer />
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { fetchContent } from '../lib/api';

// Fetch all about-related content from API
let aboutContent = {
  title: "About Ethnic Treasures",
  hero_title: "Crafting Tradition, Weaving Stories",
  hero_description: "Discover the rich heritage of Indian craftsmanship through our curated collection of handcrafted treasures",
  our_story: "",
  our_mission: "",
  our_values: [],
  stats: [],
  story_content: "",
  artisans_content: "",
  crafts_content: ""
};

try {
  // Fetch main about content
  const mainContent = await fetchContent('about');
  if (mainContent) {
    aboutContent = { ...aboutContent, ...mainContent };
  }

  // Fetch our story content
  const storyContent = await fetchContent('our-story');
  if (storyContent) {
    aboutContent.story_content = storyContent.content;
  }

  // Fetch artisans content
  const artisansContent = await fetchContent('artisans');
  if (artisansContent) {
    aboutContent.artisans_content = artisansContent.content;
  }

  // Fetch crafts content
  const craftsContent = await fetchContent('crafts');
  if (craftsContent) {
    aboutContent.crafts_content = craftsContent.content;
  }

} catch (error) {
  console.error('Failed to fetch about content:', error);
}

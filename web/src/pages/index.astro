---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import NewYearPopup from '../components/NewYearPopup.astro';
import BannerContainer from '../components/BannerContainer';
import CategoryGrid from '../components/CategoryGrid.astro';
// import Bestsellers from '../components/Bestsellers.astro'; // Temporarily hidden
import InstagramFeed from '../components/InstagramFeed.astro';
import ShareYourMoments from '../components/ShareYourMoments.astro';
import CustomerFeedback from '../components/CustomerFeedback.astro';
import OurValues from '../components/OurValues.astro';
import Newsletter from '../components/Newsletter.astro';
import Footer from '../components/Footer.astro';

// SEO structured data for homepage
const homepageSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Ethnic Treasures",
  "url": "https://ethnictreasures.co.in",
  "description": "Handcrafted ethnic bags, crochet throws, embroidered clutches, and artisan-made accessories celebrating Indian craftsmanship.",
  "publisher": {
    "@type": "Organization",
    "name": "Ethnic Treasures",
    "url": "https://ethnictreasures.co.in"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://ethnictreasures.co.in/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  },
  "sameAs": [
    "https://www.instagram.com/crochets.ethnictreasures?igsh=Z3I5ejZ1dnRjbDJn",
    "https://www.facebook.com/profile.php?id=61570085747797",
    "https://x.com/EthnicTreasure",
    "https://in.pinterest.com/ethnictreasures02",
    "https://www.youtube.com/@Crochets.ethnictreasures",
    "https://www.linkedin.com/company/ethnictreasures/?viewAsMember=true"
  ]
};


---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BannerContainer from '../components/BannerContainer';
import CategoryGrid from '../components/CategoryGrid.astro';
// import Bestsellers from '../components/Bestsellers.astro'; // Temporarily hidden
import InstagramFeed from '../components/InstagramFeed.astro';
import ShareYourMoments from '../components/ShareYourMoments.astro';
import CustomerFeedback from '../components/CustomerFeedback.astro';
import OurValues from '../components/OurValues.astro';
import Newsletter from '../components/Newsletter.astro';
import Footer from '../components/Footer.astro';

// SEO structured data for homepage
const homepageSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Ethnic Treasures",
  "description": "Discover premium handcrafted Ethnic clothing at Ethnic Treasures. Shop our curated collection of sarees, kurtis, lehengas, and more, all crafted by skilled artisans using traditional techniques.",
  "url": new URL('/', Astro.url.origin).href,
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": new URL('/search?q={search_term_string}', Astro.url.origin).href
    },
    "query-input": "required name=search_term_string"
  },
  "sameAs": [
    "https://www.instagram.com/ethnic.treasures",
    "https://www.facebook.com/EthnicTreasures",
    "https://twitter.com/EthnicTreasures"
  ]
};

---

<Layout 
  title="Ethnic Treasures - Crafting Tradition, Weaving Stories" 
  description="Discover premium handcrafted Ethnic clothing at Ethnic Treasures. Shop our curated collection of sarees, kurtis, lehengas, and more, all crafted by skilled artisans using traditional techniques."
  keywords="ethnic wear, sarees, kurtis, lehengas, traditional clothing, handcrafted, artisan products, cultural fashion, ethnic treasures"
  ogType="website"
  structuredData={homepageSchema}
>
	<Header />
	<BannerContainer 
		client:load
		apiUrl="http://localhost:8080/api/public/banners" 
		autoSlide={true}
		slideInterval={5000}
	/>
	<CategoryGrid />
	<!-- <Bestsellers /> Temporarily hidden -->
	<InstagramFeed />
	<ShareYourMoments />
	<CustomerFeedback />
	<OurValues />
	<Newsletter />
	<Footer />
</Layout>

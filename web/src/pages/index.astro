const categoryListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Product Categories - Ethnic Treasures",
  "description": "Browse our collection of handcrafted ethnic products including bags, throws, and accessories",
  "url": "https://ethnictreasures.co.in",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Leather / Faux Leather Bags",
      "url": "https://ethnictreasures.co.in/leather-bags"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Ethnic Pouches",
      "url": "https://ethnictreasures.co.in/ethnic-pouches"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Hand Bags",
      "url": "https://ethnictreasures.co.in/hand-bags"

---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CategorySidebar from '../components/CategorySidebar';
import ProductFilters from '../components/ProductFilters';
import ProductGrid from '../components/ProductGrid';
import Footer from '../components/Footer.astro';

const PUBLIC_API_URL = 'https://etreasure-1.onrender.com';
const PUBLIC_R2_BASE_URL = 'https://pub-1a3924a6c6994107be6fe9f3ed794c0a.r2.dev';

// SSR data fetching for initial load
async function getInitialData() {
  try {
    // Get URL parameters for SSR
    const url = new URL(Astro.request.url);
    const category = url.searchParams.get('category') || '';
    const page = parseInt(url.searchParams.get('page') || '1');
    
    // Build products URL with filters
    let productsUrl = `${PUBLIC_API_URL}/api/products?limit=12&page=${page}`;
    if (category) {
      productsUrl += `&category=${encodeURIComponent(category)}`;
    }
    
    const [categoriesRes, productsRes] = await Promise.all([
      fetch(`${PUBLIC_API_URL}/api/public/categories`),
      fetch(productsUrl)
    ]);
    
    const categories = categoriesRes.ok ? await categoriesRes.json() : { items: [] };
    const products = productsRes.ok ? await productsRes.json() : { items: [], total: 0 };
    
    // Try to get total count if not available
    if (!products.total && products.items) {
      products.total = products.items.length;
    }
    
    return { categories, products, initialCategory: category, initialPage: page };
  } catch (error) {
    console.error('Failed to fetch initial data:', error);
    return { categories: { items: [] }, products: { items: [], total: 0 }, initialCategory: '', initialPage: 1 };
  }
}

const { categories, products, initialCategory, initialPage } = await getInitialData();
---

<Layout title="Shop - Ethnic Treasures" description="Browse our collection of traditional and contemporary ethnic wear">
  <Header />
  
  <!-- Inject initial data for React islands -->
  <script>
    window.__INITIAL_DATA__ = {JSON.stringify({
      categories,
      products,
      totalProducts: products?.total,
      currentPage: initialPage,
      initialCategory,
      r2BaseUrl: PUBLIC_R2_BASE_URL
    })};
  </script>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-maroon to-burgundy text-white">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative container mx-auto px-4 py-8 md:py-10">
      <div class="text-center">
        <h1 class="text-2xl md:text-3xl lg:text-4xl font-playfair font-bold mb-2">
          Discover Our Collection
        </h1>
        <p class="text-sm md:text-base max-w-lg mx-auto mb-4 text-cream/90">
          Explore our exquisite range of traditional and contemporary ethnic wear, 
          handcrafted with love and attention to detail.
        </p>
        <div class="flex flex-col sm:flex-row gap-2 justify-center">
          <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-1.5 text-center">
            <div class="text-lg font-bold">{products?.total || 0}</div>
            <div class="text-xs text-cream/80">Products</div>
          </div>
          <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-1.5 text-center">
            <div class="text-lg font-bold">{categories?.items?.length || 0}</div>
            <div class="text-xs text-cream/80">Categories</div>
          </div>
                  </div>
      </div>
    </div>
  </section>

  <!-- Shop Content -->
  <main class="container mx-auto px-4 py-8 md:py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Category Sidebar -->
      <aside class="lg:w-80 lg:sticky lg:top-24 h-fit hidden lg:block">
        <CategorySidebar client:load initialCategories={categories.items} initialCategory={initialCategory} />
      </aside>

      <!-- Main Content -->
      <div class="flex-1">
        <!-- Breadcrumb -->
        <nav class="mb-6 text-sm text-gray-600">
          <ol class="flex items-center space-x-2">
            <li><a href="/" class="hover:text-maroon transition-colors">Home</a></li>
            <li><span class="text-gray-400">/</span></li>
            <li class="text-maroon font-medium">Shop</li>
            {initialCategory && (
              <>
                <li><span class="text-gray-400">/</span></li>
                <li class="text-maroon font-medium capitalize">{initialCategory.replace('-', ' ')}</li>
              </>
            )}
          </ol>
        </nav>

        <div class="flex items-center justify-between mb-6">
          <div class="text-sm text-gray-600">
            {initialCategory && (
              <span class="inline-flex items-center px-3 py-1 rounded-full bg-gold/10 text-maroon font-medium capitalize">
                {initialCategory.replace('-', ' ')}
              </span>
            )}
          </div>
          <button id="filtersDrawerOpen" type="button" class="inline-flex items-center gap-2 px-4 py-2 bg-maroon text-white rounded-lg hover:bg-maroon/90 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <span class="font-medium">Filters</span>
          </button>
        </div>

        <!-- Filters Drawer (mobile + desktop) -->
        <div id="filtersDrawer" class="hidden fixed inset-0 z-50">
          <div id="filtersDrawerBackdrop" class="absolute inset-0 bg-black/50"></div>
          <div class="absolute right-0 top-0 h-full w-full max-w-md bg-white shadow-2xl overflow-y-auto">
            <div class="flex items-center justify-between p-5 border-b border-gold/10">
              <h3 class="font-playfair text-xl font-bold text-dark">Filters</h3>
              <button id="filtersDrawerClose" type="button" class="p-2 rounded-lg hover:bg-gray-100 transition-colors" aria-label="Close filters">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <div class="p-5 space-y-6">
              <div class="lg:hidden">
                <CategorySidebar client:load initialCategories={categories.items} initialCategory={initialCategory} />
              </div>
              <ProductFilters client:load />
            </div>
          </div>
        </div>
        
        <!-- Product Grid -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 md:p-8">
          <ProductGrid client:load initialProducts={products.items} initialTotal={products.total} />
        </div>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const openBtn = document.getElementById('filtersDrawerOpen');
      const drawer = document.getElementById('filtersDrawer');
      const closeBtn = document.getElementById('filtersDrawerClose');
      const backdrop = document.getElementById('filtersDrawerBackdrop');

      const open = () => {
        drawer?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      };
      const close = () => {
        drawer?.classList.add('hidden');
        document.body.style.overflow = '';
      };

      openBtn?.addEventListener('click', open);
      closeBtn?.addEventListener('click', close);
      backdrop?.addEventListener('click', close);
      window.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') close();
      });
    });
  </script>
  
  <Footer />
</Layout>
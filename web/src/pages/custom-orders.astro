---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { fetchCategories } from '../lib/api';

// Fetch categories from database
let categories = [];
try {
  const categoriesData = await fetchCategories();
  categories = categoriesData.items || [];
} catch (error) {
  console.error('Failed to fetch categories:', error);
}
---

<Layout title="Custom Orders - Ethnic Treasures | Bespoke Handcrafted Creations">
  <Header />
  
  <main class="min-h-screen bg-light">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-maroon to-maroon/90 text-white py-20 relative overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0">
        <div class="absolute top-10 left-20 w-64 h-64 bg-gold/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-20 w-80 h-80 bg-white/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center">
          <h1 class="font-playfair text-4xl md:text-5xl font-bold mb-6 text-gold">Custom Orders</h1>
          <div class="w-32 h-1 bg-gold mx-auto mb-8"></div>
          <p class="text-xl md:text-2xl max-w-3xl mx-auto leading-relaxed text-white/90">
            Bring your vision to life with our bespoke handcrafted creations. 
            Our skilled artisans will create unique pieces tailored to your specifications.
          </p>
        </div>
      </div>
    </section>

    <!-- Custom Order Process -->
    <section class="py-20 bg-gradient-to-br from-cream via-white to-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="font-playfair text-3xl md:text-4xl font-bold text-maroon mb-6">Our Custom Order Process</h2>
            <div class="w-24 h-1 bg-gold mx-auto mb-8"></div>
            <p class="text-lg text-dark/80 max-w-2xl mx-auto">
              From concept to creation, we work closely with you to bring your custom designs to life
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="text-center group">
              <div class="bg-white rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:shadow-xl transition-shadow duration-300 border-2 border-gold/30">
                <svg class="w-10 h-10 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-dark mb-2">1. Consultation</h3>
              <p class="text-dark/70 text-sm">Discuss your vision, requirements, and design preferences with our team</p>
            </div>

            <div class="text-center group">
              <div class="bg-white rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:shadow-xl transition-shadow duration-300 border-2 border-gold/30">
                <svg class="w-10 h-10 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-dark mb-2">2. Design</h3>
              <p class="text-dark/70 text-sm">Our artisans create detailed sketches and design proposals for your approval</p>
            </div>

            <div class="text-center group">
              <div class="bg-white rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:shadow-xl transition-shadow duration-300 border-2 border-gold/30">
                <svg class="w-10 h-10 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-dark mb-2">3. Creation</h3>
              <p class="text-dark/70 text-sm">Skilled artisans handcraft your piece using traditional techniques</p>
            </div>

            <div class="text-center group">
              <div class="bg-white rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 shadow-lg group-hover:shadow-xl transition-shadow duration-300 border-2 border-gold/30">
                <svg class="w-10 h-10 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-dark mb-2">4. Delivery</h3>
              <p class="text-dark/70 text-sm">Your custom piece is carefully packaged and delivered to your doorstep</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Custom Order Form -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="font-playfair text-3xl md:text-4xl font-bold text-maroon mb-6">Start Your Custom Order</h2>
            <div class="w-24 h-1 bg-gold mx-auto mb-8"></div>
            <p class="text-lg text-dark/80 max-w-2xl mx-auto">
              Fill out the form below and our team will get in touch with you within 24 hours
            </p>
          </div>

          <div class="bg-gradient-to-br from-cream to-white rounded-2xl shadow-xl p-8 md:p-12 border border-gold/20">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-dark mb-2">Full Name *</label>
                  <input type="text" id="name" name="name" required
                    class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300"
                    placeholder="Your full name">
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-dark mb-2">Email Address *</label>
                  <input type="email" id="email" name="email" required
                    class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300"
                    placeholder="your@email.com">
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-medium text-dark mb-2">Phone Number *</label>
                  <input type="tel" id="phone" name="phone" required
                    class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300"
                    placeholder="+91 98765 43210">
                </div>
                <div>
                  <label for="category" class="block text-sm font-medium text-dark mb-2">Product Category *</label>
                  <select id="category" name="category" required
                    class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300">
                    <option value="">Select a category</option>
                    {categories.map((category) => (
                      <option value={category.slug}>{category.name}</option>
                    ))}
                  </select>
                </div>
              </div>

              <div>
                <label for="budget" class="block text-sm font-medium text-dark mb-2">Budget Range *</label>
                <select id="budget" name="budget" required
                  class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300">
                  <option value="">Select your budget</option>
                  <option value="5000-10000">₹5,000 - ₹10,000</option>
                  <option value="10000-25000">₹10,000 - ₹25,000</option>
                  <option value="25000-50000">₹25,000 - ₹50,000</option>
                  <option value="50000-100000">₹50,000 - ₹1,00,000</option>
                  <option value="100000+">₹1,00,000+</option>
                </select>
              </div>

              <div>
                <label for="timeline" class="block text-sm font-medium text-dark mb-2">Required Timeline *</label>
                <select id="timeline" name="timeline" required
                  class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300">
                  <option value="">Select timeline</option>
                  <option value="urgent">Urgent (within 2 weeks)</option>
                  <option value="normal">Normal (within 1 month)</option>
                  <option value="flexible">Flexible (2-3 months)</option>
                  <option value="very-flexible">Very Flexible (3+ months)</option>
                </select>
              </div>

              <div>
                <label for="description" class="block text-sm font-medium text-dark mb-2">Project Description *</label>
                <textarea id="description" name="description" rows="6" required
                  class="w-full px-4 py-3 rounded-lg border border-gold/30 focus:border-gold focus:outline-none focus:ring-2 focus:ring-gold/20 transition-colors duration-300"
                  placeholder="Please describe your custom order in detail - include colors, designs, materials, occasion, any specific requirements..."></textarea>
              </div>

              <div>
                <label for="reference" class="block text-sm font-medium text-dark mb-2">Reference Images (Optional)</label>
                <div class="border-2 border-dashed border-gold/30 rounded-lg p-6 text-center hover:border-gold/50 transition-colors duration-300">
                  <svg class="w-12 h-12 text-gold/50 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  <p class="text-dark/70 mb-2">Drop files here or click to upload</p>
                  <p class="text-sm text-dark/50">PNG, JPG, GIF up to 10MB each</p>
                  <input type="file" id="reference" name="reference" multiple accept="image/*" class="hidden">
                </div>
              </div>

              <div class="flex items-center">
                <input type="checkbox" id="newsletter" name="newsletter" class="mr-2">
                <label for="newsletter" class="text-sm text-dark/70">
                  I'd like to receive updates about new collections and exclusive offers
                </label>
              </div>

              <div class="text-center">
                <button type="submit" 
                  class="bg-gradient-to-r from-maroon to-maroon/90 text-white px-8 py-4 rounded-lg font-semibold hover:from-maroon/90 hover:to-maroon/80 transition-all duration-300 transform hover:scale-105 shadow-lg">
                  Submit Custom Order Request
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16 bg-gradient-to-r from-maroon to-maroon/90 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="font-playfair text-3xl font-bold mb-6">Have Questions?</h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Our custom order specialists are here to help you create the perfect piece
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+919810427042" 
            class="bg-gold text-dark px-8 py-3 rounded-lg font-medium hover:bg-gold/90 transition-colors duration-200">
            Call Us: +91 9810427042
          </a>
          <a href="mailto:info@ethnictreasures.co.in" 
            class="bg-white/10 backdrop-blur-sm text-white px-8 py-3 rounded-lg font-medium hover:bg-white/20 transition-colors duration-200 border border-white/30">
            Email: info@ethnictreasures.co.in
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  // Handle form submission
  document.querySelector('form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Here you would normally send this to your backend
    console.log('Custom order submitted:', data);
    
    // Show success message
    const successMessage = document.createElement('div');
    successMessage.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
    successMessage.textContent = 'Thank you! Your custom order request has been submitted. We will contact you within 24 hours.';
    document.body.appendChild(successMessage);
    
    // Reset form
    this.reset();
    
    // Remove message after 5 seconds
    setTimeout(() => {
      successMessage.remove();
    }, 5000);
  });

  // Handle file upload
  const fileInput = document.getElementById('reference');
  const dropZone = fileInput.parentElement;
  
  dropZone.addEventListener('click', () => fileInput.click());
  
  dropZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-gold', 'bg-gold/5');
  });
  
  dropZone.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-gold', 'bg-gold/5');
  });
  
  dropZone.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-gold', 'bg-gold/5');
    
    const files = Array.from(e.dataTransfer.files);
    console.log('Files dropped:', files);
  });
</script>

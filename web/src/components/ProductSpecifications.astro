---
interface Props {
  material?: string | null;
  design?: string | null;
  technique?: string | null;
  texture?: string | null;
  finish?: string | null;
  dimensions?: string | null;
  weight?: string | null;
  productUse?: string | null;
  careInstructions?: string | null;
}

const { 
  material, 
  design, 
  technique, 
  texture, 
  finish, 
  dimensions, 
  weight, 
  productUse, 
  careInstructions 
} = Astro.props;

// Check if any specifications are available
const hasSpecifications = material || design || technique || texture || finish || dimensions || weight || productUse || careInstructions;
---

{hasSpecifications && (
  <div class="space-y-6">
    <!-- Material Specifications -->
    <div>
      <h3 class="font-playfair text-2xl font-semibold text-maroon mb-4">Product Specifications</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        {material && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Material</h4>
            <p class="text-dark/70">{material}</p>
          </div>
        )}

        {design && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Design</h4>
            <p class="text-dark/70">{design}</p>
          </div>
        )}

        {technique && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Technique</h4>
            <p class="text-dark/70">{technique}</p>
          </div>
        )}

        {texture && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Texture</h4>
            <p class="text-dark/70">{texture}</p>
          </div>
        )}

        {finish && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Finish</h4>
            <p class="text-dark/70">{finish}</p>
          </div>
        )}

        {dimensions && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Dimensions</h4>
            <p class="text-dark/70">{dimensions}</p>
          </div>
        )}

        {weight && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Weight</h4>
            <p class="text-dark/70">{weight}</p>
          </div>
        )}

        {productUse && (
          <div class="space-y-2">
            <h4 class="font-semibold text-lg text-dark/80">Uses</h4>
            <p class="text-dark/70">{productUse}</p>
          </div>
        )}

      </div>
    </div>

    {/* Care Instructions */}
    {careInstructions && (
      <div>
        <h3 class="font-playfair text-2xl font-semibold text-maroon mb-4">Care Instructions</h3>
        <div class="bg-cream/50 p-6 rounded-lg border border-gold/20">
          <p class="text-dark/70 leading-relaxed">{careInstructions}</p>
        </div>
      </div>
    )}
  </div>
)}

{!hasSpecifications && (
  <div class="text-center py-8">
    <p class="text-dark/50 italic">Detailed specifications will be available soon.</p>
  </div>
)}

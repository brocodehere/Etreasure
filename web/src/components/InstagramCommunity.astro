---
// Instagram Community section showing community stats and engagement
const instagramStats = [
	{ number: "50K+", label: "Instagram Family" },
	{ number: "1000+", label: "Handcrafted Pieces" },
	{ number: "25+", label: "Artisan Communities" },
	{ number: "15+", label: "Countries Shipped" }
];
---

<section class="relative py-20 bg-gradient-to-br from-cream via-white to-cream overflow-hidden">
	<!-- Premium Background Effects -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute top-10 left-20 w-64 h-64 bg-gradient-to-br from-gold to-maroon rounded-full blur-3xl animate-pulse"></div>
		<div class="absolute bottom-10 right-20 w-80 h-80 bg-gold rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s"></div>
	</div>
	
	<!-- Floating Decorative Elements -->
	<div class="absolute inset-0 overflow-hidden pointer-events-none">
		<div class="absolute top-20 right-10 w-16 h-16 border-2 border-gold/30 rounded-full animate-bounce" style="animation-duration: 3s;"></div>
		<div class="absolute bottom-20 left-10 w-12 h-12 border-2 border-gold/20 rounded-full animate-bounce" style="animation-duration: 4s; animation-delay: 1s;"></div>
		<div class="absolute top-1/3 left-1/4 w-8 h-8 bg-gold/20 rounded-full animate-pulse" style="animation-duration: 2s;"></div>
		<div class="absolute bottom-1/3 right-1/4 w-6 h-6 bg-maroon/20 rounded-full animate-pulse" style="animation-duration: 2.5s; animation-delay: 0.5s;"></div>
	</div>
	
	<div class="container mx-auto px-4 relative z-10">
		<!-- Section Header -->
		<div class="text-center mb-16 animate-fade-in">
			<div class="inline-flex items-center gap-3 mb-6">
				<div class="h-px bg-gradient-to-r from-transparent to-gold w-20"></div>
				<span class="text-gold font-playfair text-sm tracking-widest uppercase bg-white/80 px-4 py-2 rounded-full border border-gold/30 shadow-lg">Instagram Community</span>
				<div class="h-px bg-gradient-to-l from-transparent to-gold w-20"></div>
			</div>
			
			<h2 class="font-playfair text-4xl md:text-5xl font-bold text-gradient mb-6">
				Our Growing Community
			</h2>
			
			<div class="flex items-center justify-center gap-4 mb-8">
				<div class="w-20 h-0.5 bg-gradient-to-r from-transparent to-gold shadow-gold"></div>
				<div class="w-4 h-4 bg-gradient-to-br from-gold to-maroon rounded-full shadow-gold animate-pulse"></div>
				<div class="w-20 h-0.5 bg-gradient-to-l from-transparent to-gold shadow-gold"></div>
			</div>
			
			<p class="text-xl text-dark/80 max-w-3xl mx-auto leading-relaxed font-light mb-8">
				Join thousands who celebrate traditional craftsmanship and authentic ethnic fashion
			</p>
			
			<!-- Instagram Profile Link -->
			<div class="flex flex-col sm:flex-row items-center justify-center gap-6">
				<a 
					href="https://instagram.com/crochets.ethnictreasures" 
					target="_blank" 
					rel="noopener noreferrer"
					class="group relative inline-flex items-center gap-4 bg-gradient-to-r from-gold to-maroon text-white px-10 py-5 rounded-full font-bold text-xl shadow-2xl hover:shadow-gold-hover transform hover:scale-105 transition-all duration-500 hover:rotate-1"
				>
					<!-- Animated Instagram Icon -->
					<div class="relative">
						<svg class="w-8 h-8 transform group-hover:rotate-12 transition-transform duration-500" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"/>
						</svg>
						<!-- Glow Effect -->
						<div class="absolute inset-0 bg-gold rounded-full blur-lg opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>
					</div>
					<span class="text-xl">@crochets.ethnictreasures</span>
					<!-- Enhanced Arrow -->
					<svg class="w-6 h-6 transform group-hover:translate-x-2 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</div>

		<!-- Premium Instagram Stats Section -->
		<div class="mb-20">
			<div class="text-center mb-12">
				<h3 class="font-playfair text-2xl md:text-3xl font-bold text-maroon mb-4">Community Impact</h3>
				<p class="text-dark/70">Together we're celebrating traditional craftsmanship worldwide</p>
			</div>
			
			<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
				{instagramStats.map((stat, index) => (
					<div key={index} class="group relative overflow-hidden">
						<!-- Background Animation -->
						<div class="absolute inset-0 bg-gradient-to-br from-gold/10 to-maroon/10 rounded-3xl transform scale-95 group-hover:scale-100 transition-transform duration-500"></div>
						
						<div class="relative bg-white/80 backdrop-blur-lg rounded-3xl border border-gold/30 shadow-xl p-8 text-center group-hover:shadow-2xl transition-all duration-500 animate-fade-up" style="animation-delay: 0.15s;">
							<!-- Icon -->
							<div class="w-16 h-16 bg-gradient-to-br from-gold to-maroon rounded-full flex items-center justify-center text-white mx-auto mb-4 shadow-lg group-hover:shadow-gold-hover transform group-hover:scale-110 transition-all duration-300">
								<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
									{index === 0 && <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>}
									{index === 1 && <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>}
									{index === 2 && <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>}
									{index === 3 && <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>}
								</svg>
							</div>
							
							<!-- Number with Animation -->
							<div class="text-4xl font-bold text-gradient mb-2 group-hover:scale-110 transition-transform duration-300">{stat.number}</div>
							<div class="text-sm text-dark/70 font-medium uppercase tracking-wide">{stat.label}</div>
							
							<!-- Hover Effect Line -->
							<div class="mt-4 h-0.5 bg-gradient-to-r from-transparent via-gold to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
						</div>
					</div>
				))}
			</div>
		</div>

		<!-- Community Features -->
		
	</div>
</section>

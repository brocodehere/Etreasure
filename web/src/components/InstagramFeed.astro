---
// Live Instagram Feed section with LightWidget integration
---

<section class="relative py-8 bg-gradient-to-br from-cream via-white to-cream overflow-hidden">
	<!-- Premium Background Effects -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute top-10 left-20 w-64 h-64 bg-gradient-to-br from-gold to-maroon rounded-full blur-3xl animate-pulse"></div>
		<div class="absolute bottom-10 right-20 w-80 h-80 bg-gold rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s"></div>
	</div>
	
	<div class="container mx-auto px-4 relative z-10">
		<!-- Section Header -->
		<div class="text-center mb-8 animate-fade-in">
			<div class="inline-flex items-center gap-4 mb-4">
				<div class="h-px bg-gradient-to-r from-transparent to-gold w-24"></div>
				<span class="text-gold font-playfair text-sm tracking-widest uppercase bg-white/90 px-6 py-3 rounded-full border-2 border-gold/30 shadow-lg animate-pulse">Live Instagram Feed</span>
				<div class="h-px bg-gradient-to-l from-transparent to-gold w-24"></div>
			</div>
			<h2 class="font-playfair text-3xl md:text-4xl font-bold text-gradient mb-4">
				Latest from Our Gallery
			</h2>
			<p class="text-lg text-dark/80 max-w-3xl mx-auto leading-relaxed">
				Follow <span class="text-gold font-bold">@crochets.ethnictreasures</span> for daily inspiration, 
				behind-the-scenes content, and exclusive glimpses into our craft.
			</p>
		</div>
		
		<!-- Ultra-Premium LightWidget Integration -->
		<div class="relative max-w-7xl mx-auto px-2 sm:px-4">
			<!-- Multi-layer Background Effects -->
			<div class="absolute inset-0 bg-gradient-to-br from-gold/10 via-transparent to-maroon/10 rounded-3xl transform rotate-1"></div>
			<div class="absolute inset-0 bg-gradient-to-tl from-maroon/5 via-transparent to-gold/5 rounded-3xl transform -rotate-1"></div>
			<div class="absolute inset-0 border-2 border-gold/20 rounded-3xl transform rotate-1"></div>
			
			<!-- Main Widget Container -->
			<div class="relative bg-white/95 backdrop-blur-xl rounded-3xl border-2 border-gold/40 shadow-2xl p-8 md:p-10">
				<!-- Premium Widget Header -->
				<div class="flex flex-col lg:flex-row items-center justify-between mb-6 pb-4 border-b border-gold/20 gap-4">
					<div class="flex items-center gap-3 text-center lg:text-left">
						<!-- Enhanced Instagram Icon with Glow -->
						<div class="relative flex-shrink-0">
							<div class="w-12 h-12 sm:w-14 sm:h-16 bg-gradient-to-br from-gold to-maroon rounded-full flex items-center justify-center text-white shadow-xl animate-pulse">
								<svg class="w-6 h-6 sm:w-7 sm:h-8" fill="currentColor" viewBox="0 0 24 24">

---
// Enhanced Founder's Story section with premium design and interactive elements
const milestones = [
	{
		year: '2015',
		title: 'The Beginning',
		description: 'Started in a small Jaipur workshop with a vision to preserve traditional crafts',
		icon: 'seedling'
	},
	{
		year: '2017',
		title: 'First Partnership',
		description: 'Collaborated with 15 artisan communities across Rajasthan',
		icon: 'handshake'
	},
	{
		year: '2020',
		title: 'Digital Launch',
		description: 'Launched online platform reaching global customers',
		icon: 'globe'
	},
	{
		year: '2023',
		title: 'Recognition',
		description: 'Awarded for sustainable practices and artisan empowerment',
		icon: 'award'
	}
];

const achievements = [
	{ number: '200+', label: 'Artisan Communities', icon: 'people' },
	{ number: '15', label: 'Indian States', icon: 'map' },
	{ number: '50K+', label: 'Happy Customers', icon: 'heart' },
	{ number: '8', label: 'Years of Heritage', icon: 'star' },
	{ number: '1000+', label: 'Unique Designs', icon: 'sparkles' },
	{ number: '25', label: 'Craft Forms Preserved', icon: 'shield' }
];
---

<section class="relative py-24 bg-gradient-to-br from-cream via-white to-cream overflow-hidden">
	<!-- Background Decorative Elements -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute top-10 right-20 w-72 h-72 bg-gold rounded-full blur-3xl animate-pulse"></div>
		<div class="absolute bottom-20 left-20 w-96 h-96 bg-maroon rounded-full blur-3xl animate-pulse" style="animation-delay: 2s"></div>
		<div class="absolute top-1/3 left-1/4 w-64 h-64 bg-gold/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s"></div>
	</div>
	
	<!-- Pattern Overlay -->
	<div class="absolute inset-0 opacity-3">
		<div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23D4A857\" fill-opacity=\"0.1\"%3E%3Ccircle cx=\"7\" cy=\"7\" r=\"1\"/%3E%3Ccircle cx=\"53\" cy=\"7\" r=\"1\"/%3E%3Ccircle cx=\"30\" cy=\"7\" r=\"1\"/%3E%3Ccircle cx=\"7\" cy=\"30\" r=\"1\"/%3E%3Ccircle cx=\"53\" cy=\"30\" r=\"1\"/%3E%3Ccircle cx=\"30\" cy=\"30\" r=\"1\"/%3E%3Ccircle cx=\"7\" cy=\"53\" r=\"1\"/%3E%3Ccircle cx=\"53\" cy=\"53\" r=\"1\"/%3E%3Ccircle cx=\"30\" cy=\"53\" r=\"1\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E'); background-repeat: repeat;"></div>
	</div>
	
	<div class="container mx-auto px-4 relative z-10">
		<!-- Enhanced Section Header -->
		<div class="text-center mb-20 animate-fade-in">
			<div class="inline-flex items-center gap-3 mb-6">
				<div class="h-px bg-gradient-to-r from-transparent to-gold w-20"></div>
				<span class="text-gold font-playfair text-sm tracking-widest uppercase">Our Heritage</span>
				<div class="h-px bg-gradient-to-l from-transparent to-gold w-20"></div>
			</div>
			
			<h2 class="font-playfair text-5xl md:text-6xl font-bold text-gradient mb-6">
				Founder's Story
			</h2>
			
			<div class="flex items-center justify-center gap-4 mb-8">
				<div class="w-16 h-0.5 bg-gold shadow-gold"></div>
				<div class="w-3 h-3 bg-gold rounded-full shadow-gold animate-pulse"></div>
				<div class="w-16 h-0.5 bg-gold shadow-gold"></div>
			</div>
			
			<p class="text-lg md:text-xl text-dark/80 max-w-3xl mx-auto leading-relaxed font-light">
				A remarkable journey of <span class="text-maroon font-semibold">passion</span>, <span class="text-gold font-semibold">tradition</span>, and the vision to preserve India's rich textile heritage for generations to come.
			</p>
		</div>

		<!-- Enhanced Two-Column Layout -->
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
			<!-- Enhanced Founder Image Section -->
			<div class="relative animate-fade-up">
				<!-- Main Image with Enhanced Frame -->
				<div class="relative group">
					<div class="absolute inset-0 bg-gradient-to-br from-gold/20 to-maroon/20 rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform duration-500"></div>
					<div class="relative bg-white p-2 rounded-2xl shadow-2xl">
						<picture>
							<source srcset="/images/founder-800.avif" media="(min-width: 640px)" type="image/avif">
							<source srcset="/images/founder-400.avif" type="image/avif">
							<source srcset="/images/founder-800.webp" media="(min-width: 640px)" type="image/webp">
							<source srcset="/images/founder-400.webp" type="image/webp">
							<img 
								src="/images/founder-800.jpg" 
								alt="Ish Walia - Founder of Ethnic Treasures"
								class="rounded-xl w-full transition-transform duration-700 group-hover:scale-105"
								loading="lazy"
							/>
						</picture>
					</div>
				</div>
				
				<!-- Enhanced Quote Badge -->
				<div class="absolute -top-6 -right-6 bg-gradient-to-br from-gold to-maroon text-white p-4 rounded-full shadow-xl transform hover:scale-110 transition-all duration-300 cursor-pointer group">
					<svg class="w-8 h-8 transform group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
						<path d="M6 17h3l2-4V7H7v6h4l-2 4zm8 0h3l2-4V7h-4v6h4l-2 4z"/>
					</svg>
					<div class="absolute -bottom-20 left-1/2 transform -translate-x-1/2 bg-white p-3 rounded-lg shadow-xl opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap">
						<p class="text-sm text-maroon font-semibold">"Crafting Dreams, Preserving Heritage"</p>
						<div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-4 h-4 bg-white rotate-45"></div>
					</div>
				</div>
				
				<!-- Decorative Elements -->
				<div class="absolute -bottom-4 -left-4 w-20 h-20 bg-gold/10 rounded-full blur-xl"></div>
				<div class="absolute -top-4 -left-4 w-16 h-16 bg-maroon/10 rounded-full blur-lg"></div>
			</div>

			<!-- Enhanced Story Content -->
			<div class="space-y-8 animate-fade-up" style="animation-delay: 0.3s">
				<!-- Story Title -->
				<div>
					<h3 class="font-playfair text-3xl font-bold text-maroon mb-4">
						From Heritage to High Fashion
					</h3>
					<div class="flex items-center gap-4 mb-6">
						<div class="w-20 h-0.5 bg-gradient-to-r from-gold to-maroon"></div>
						<div class="w-2 h-2 bg-gold rounded-full"></div>
						<div class="w-12 h-0.5 bg-gradient-to-r from-gold to-transparent"></div>
					</div>
				</div>

				<!-- Enhanced Story Content -->
				<div class="space-y-6 text-dark/90 leading-relaxed">
					<div class="bg-white/60 backdrop-blur-sm p-6 rounded-2xl border border-gold/20 shadow-lg">
						<p class="text-lg font-medium">
							Founded in 2015 by <span class="text-maroon font-bold">Ish Walia</span>, Ethnic Treasures began as a small passion project in a Jaipur workshop. With a degree in Textile Design and a family legacy of weavers spanning three generations, Ish envisioned a platform that would bridge traditional Indian craftsmanship with contemporary global fashion.
						</p>
					</div>
					
					<div class="relative pl-8 border-l-4 border-gold/30">
						<div class="absolute -left-3 top-0 w-6 h-6 bg-gold rounded-full shadow-gold"></div>
						<p class="italic text-lg text-dark/80">
							"What started as visiting remote villages and documenting dying art forms evolved into a mission. I realized that these incredible crafts weren't just products â€“ they were stories, traditions, and the very soul of our cultural heritage that needed to be preserved and celebrated."
						</p>
						<div class="mt-2 text-sm text-gold font-semibold">- Ish Walia</div>
					</div>
					
					<div class="bg-gradient-to-r from-maroon/5 to-gold/5 p-6 rounded-2xl border border-gold/20">
						<p class="text-lg">
							Today, Ethnic Treasures works with over <span class="text-maroon font-bold">200 artisan communities</span> across <span class="text-gold font-bold">15 states</span>, ensuring fair wages, sustainable practices, and global recognition for their incredible work. Each piece in our collection carries not just exceptional craftsmanship, but the dignity and pride of its creator.
						</p>
					</div>
				</div>

				<!-- Enhanced Journey Timeline -->
				<div class="mt-8">
					<h4 class="font-playfair text-xl font-bold text-maroon mb-6">Our Journey</h4>
					<div class="space-y-4">
						{milestones.map((milestone, index) => (
							<div key={index} class="flex items-start gap-4 group animate-fade-up" style={`animation-delay: ${0.5 + index * 0.1}s;`}>
								<div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-gold to-maroon rounded-full flex items-center justify-center text-white shadow-lg transform group-hover:scale-110 transition-transform duration-300">
									{milestone.icon === 'seedling' && (
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
										</svg>
									)}
									{milestone.icon === 'handshake' && (
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
										</svg>
									)}
									{milestone.icon === 'globe' && (
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
										</svg>
									)}
									{milestone.icon === 'award' && (
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
										</svg>
									)}
								</div>
								<div class="flex-1">
									<div class="flex items-center gap-3 mb-2">
										<span class="text-gold font-bold text-lg">{milestone.year}</span>
										<h5 class="font-semibold text-maroon">{milestone.title}</h5>
									</div>
									<p class="text-dark/70 text-sm">{milestone.description}</p>
								</div>
							</div>
						))}
					</div>
				</div>

				<!-- Enhanced Achievements Grid -->
				<div class="mt-12">
					<h4 class="font-playfair text-xl font-bold text-maroon mb-6 text-center">Our Impact</h4>
					<div class="grid grid-cols-2 md:grid-cols-3 gap-6">
						{achievements.map((achievement, index) => (
							<div key={index} class="text-center p-6 bg-white/60 backdrop-blur-sm rounded-2xl border border-gold/20 shadow-lg group hover:shadow-xl transition-all duration-300 animate-fade-up" style={`animation-delay: ${0.8 + index * 0.1}s;`}>
								<div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-gold to-maroon rounded-full flex items-center justify-center text-white transform group-hover:scale-110 transition-transform duration-300">
									{achievement.icon === 'people' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
										</svg>
									)}
									{achievement.icon === 'map' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
										</svg>
									)}
									{achievement.icon === 'heart' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
										</svg>
									)}
									{achievement.icon === 'star' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
									)}
									{achievement.icon === 'sparkles' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
										</svg>
									)}
									{achievement.icon === 'shield' && (
										<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 2L4 7v6c0 5.55 3.84 10.74 8 12 4.16-1.26 8-6.45 8-12V7l-8-5z"/>
										</svg>
									)}
								</div>
							<div class="text-2xl font-bold text-maroon mb-2">{achievement.number}</div>
							<div class="text-sm text-dark/70">{achievement.label}</div>
						</div>
					))}
					</div>
				</div>

				<!-- Enhanced Signature Section -->
				<div class="mt-12 p-8 bg-gradient-to-r from-maroon/5 to-gold/5 rounded-2xl border border-gold/20">
					<div class="flex items-center justify-between">
						<div class="flex items-center space-x-6">
							<!-- Signature Icon -->
							<div class="w-16 h-16 bg-gradient-to-br from-gold to-maroon rounded-full flex items-center justify-center text-white shadow-gold">
								<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
									<path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
								</svg>
							</div>
							
							<!-- Founder Info -->
							<div>
								<div class="font-playfair text-2xl font-bold text-maroon mb-1">Ish Walia</div>
								<div class="text-gold font-semibold mb-2">Founder & Creative Director</div>
								<div class="text-sm text-dark/60 italic">"Weaving Traditions, Creating Legacies"</div>
							</div>
						</div>
						
						<!-- Social Links -->
						<div class="flex items-center gap-3">
							<a href="#" class="w-10 h-10 bg-maroon/10 text-maroon rounded-full flex items-center justify-center hover:bg-maroon hover:text-white transition-all duration-300">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M22.46 6c-.85.38-1.75.64-2.7.76 1-.6 1.76-1.55 2.12-2.68-.93.55-1.96.95-3.06 1.17-.88-.94-2.13-1.53-3.51-1.53-2.66 0-4.81 2.16-4.81 4.81 0 .38.04.75.13 1.1-4-.2-7.54-2.11-9.91-5.02-.41.71-.65 1.53-.65 2.4 0 1.67.85 3.14 2.14 4.01-.79-.02-1.53-.24-2.18-.6v.06c0 2.33 1.66 4.28 3.86 4.72-.4.11-.83.17-1.27.17-.31 0-.62-.03-.92-.08.63 1.91 2.39 3.3 4.49 3.34-1.65 1.29-3.72 2.06-5.97 2.06-.39 0-.77-.02-1.15-.07 2.13 1.36 4.65 2.16 7.37 2.16 8.84 0 13.68-7.32 13.68-13.68 0-.21 0-.42-.01-.62.94-.68 1.76-1.53 2.4-2.5z"/>
								</svg>
							</a>
							<a href="#" class="w-10 h-10 bg-maroon/10 text-maroon rounded-full flex items-center justify-center hover:bg-maroon hover:text-white transition-all duration-300">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
								</svg>
							</a>
							<a href="#" class="w-10 h-10 bg-maroon/10 text-maroon rounded-full flex items-center justify-center hover:bg-maroon hover:text-white transition-all duration-300">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

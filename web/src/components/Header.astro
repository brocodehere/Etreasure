---
// Header component with dropdown menu for categories
import SearchBar from './SearchBar.astro';

const PUBLIC_API_URL = 'https://etreasure-1.onrender.com';
---

<script>
	// Fetch categories from API
	async function fetchCategories() {
		try {
			const response = await fetch(`${PUBLIC_API_URL}/api/public/categories`);
			const data = await response.json();
			return data.items || [];
		} catch (error) {
			console.error('Failed to fetch categories:', error);
			return [];
		}
	}

	// Render categories in dropdowns
	async function renderCategories() {
		const categories = await fetchCategories();
		
		// Update desktop shop dropdown
		const desktopShopMenu = document.querySelector('.desktop-shop-menu .py-2');
		if (desktopShopMenu) {
			desktopShopMenu.innerHTML = categories.map(cat => `
				<a href="/shop?category=${cat.slug}" class="block px-3 py-2 rounded-lg hover:bg-gradient-to-r hover:from-gold/10 hover:to-maroon/5 transition-all duration-300 group/item">
					<div class="flex items-center space-x-3">
						<div class="w-8 h-8 bg-gradient-to-br from-gold/30 to-gold/10 rounded-lg flex items-center justify-center transform group-hover/item:scale-110 transition-transform duration-300 shadow-sm">
							<svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
								<path d="M7 3a1 1 0 000 2h6a1 1 0 000-2H7zM4 7a1 1 0 011-1h10a1 1 0 011 1v3a2 2 0 01-2 2H6a2 2 0 01-2-2V7zm2 5a2 2 0 012-2h4a2 2 0 012 2v3a2 2 0 01-2 2H8a2 2 0 01-2-2v-3z"></path>
							</svg>
						</div>
						<div>
							<div class="font-semibold text-dark group-hover/item:text-maroon transition-colors duration-300 text-sm">${cat.name}</div>
							${cat.description ? `<div class="text-xs text-dark/50">${cat.description}</div>` : ''}
						</div>
						<svg class="w-3 h-3 text-gold/0 group-hover/item:text-gold transform group-hover/item:translate-x-1 transition-all duration-300 ml-auto" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
						</svg>
					</div>
				</a>
			`).join('');
		}

		// Update mobile shop dropdown
		const mobileShopMenu = document.querySelector('[data-shop-menu]');
		if (mobileShopMenu) {
			mobileShopMenu.innerHTML = categories.map(cat => `
				<a href="/shop?category=${cat.slug}" class="block px-8 py-2 text-dark hover:text-maroon hover:bg-gold/5 transition-all duration-300 text-sm">${cat.name}</a>
			`).join('');
		}
	}

	// Initialize categories when DOM is loaded
	document.addEventListener('DOMContentLoaded', renderCategories);
</script>


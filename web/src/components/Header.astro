<script type="module">
	// Mobile menu toggle
	const mobileMenuButton = document.querySelector('[data-mobile-menu-button]');
	const mobileMenu = document.getElementById('mobileMenu');
	const mobileMenuClose = document.querySelector('[data-mobile-menu-close]');
	const shopToggle = document.querySelector('[data-shop-toggle]');
	const shopMenu = document.querySelector('[data-shop-menu]');
	const shopIcon = document.querySelector('[data-shop-icon]');

	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});

		// Close menu when clicking on a link
		const links = mobileMenu.querySelectorAll('a');
		links.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.add('hidden');
				if (shopMenu) shopMenu.classList.add('hidden');
			});
		});
	}

	// Close menu with close button
	if (mobileMenuClose && mobileMenu) {
		mobileMenuClose.addEventListener('click', () => {
			mobileMenu.classList.add('hidden');
			if (shopMenu) shopMenu.classList.add('hidden');
		});
	}

	// Shop submenu toggle
	if (shopToggle && shopMenu && shopIcon) {
		shopToggle.addEventListener('click', () => {
			shopMenu.classList.toggle('hidden');
			shopIcon.classList.toggle('rotate-180');
		});
	}

	// Check if user is authenticated
	function isAuthenticated() {
		if (typeof localStorage !== 'undefined') {
			const token = localStorage.getItem('accessToken');
			const user = localStorage.getItem('user');
			return !!(token && user);
		}
		return false;
	}

	// Handle profile button click
	function handleProfileClick() {
		if (isAuthenticated()) {
			window.location.href = '/profile';
		} else {
			window.location.href = '/login';
		}
	}

	// Update cart count from API (only if authenticated)
	async function updateCartCount() {
		if (!isAuthenticated()) {
			const cartCount = document.querySelector('[data-cart-count]');
			if (cartCount) {
				cartCount.textContent = '0';
			}
			return;
		}

		try {
			const token = localStorage.getItem('accessToken');
			const response = await fetch(`${PUBLIC_API_URL}/api/cart`, {
				headers: {
					'Authorization': `Bearer ${token}`,
					'Content-Type': 'application/json'
				}
			});
			
			if (response.ok) {
				const cartData = await response.json();
				const cartCount = document.querySelector('[data-cart-count]');
				if (cartCount) {
					cartCount.textContent = cartData.count || 0;
				}
			} else if (response.status === 401) {
				// Clear auth data on 401
				localStorage.removeItem('accessToken');
				localStorage.removeItem('refreshToken');
				localStorage.removeItem('user');
				const cartCount = document.querySelector('[data-cart-count]');
				if (cartCount) {
					cartCount.textContent = '0';
				}
			}
		} catch (error) {
			console.error('Error updating cart count:', error);
			const cartCount = document.querySelector('[data-cart-count]');
			if (cartCount) {
				cartCount.textContent = '0';
			}
		}
	}

	// Update wishlist count from API (only if authenticated)
	async function updateWishlistCount() {
		if (!isAuthenticated()) {
			const wishlistCount = document.querySelector('[data-wishlist-count]');
			if (wishlistCount) {
				wishlistCount.textContent = '0';
			}
			return;
		}

		try {
			const token = localStorage.getItem('accessToken');
			const response = await fetch(`${PUBLIC_API_URL}/api/wishlist`, {
				headers: {
					'Authorization': `Bearer ${token}`,
					'Content-Type': 'application/json'
				}
			});
			
			if (response.ok) {
				const wishlistData = await response.json();
				const wishlistCount = document.querySelector('[data-wishlist-count]');
				if (wishlistCount) {
					wishlistCount.textContent = wishlistData.count || 0;
				}
			} else if (response.status === 401) {
				// Clear auth data on 401
				localStorage.removeItem('accessToken');
				localStorage.removeItem('refreshToken');
				localStorage.removeItem('user');
				const wishlistCount = document.querySelector('[data-wishlist-count]');
				if (wishlistCount) {
					wishlistCount.textContent = '0';
				}
			}
		} catch (error) {
			console.error('Error updating wishlist count:', error);
			const wishlistCount = document.querySelector('[data-wishlist-count]');
			if (wishlistCount) {
				wishlistCount.textContent = '0';
			}
		}
	}

	// Add event listener to profile button
	const profileButton = document.getElementById('profileButton');
	if (profileButton) {
		profileButton.addEventListener('click', handleProfileClick);
	}

	// Initial count updates
	updateCartCount();
	updateWishlistCount();

	// Storage event listener removed since we're using API instead of localStorage
</script>

